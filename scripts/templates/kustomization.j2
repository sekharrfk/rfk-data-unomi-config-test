bases:
  - ../../../base/{{env}}-root

commonLabels:
  domainHash: "{{domain_hash}}"

nameSuffix: "-{{domain_hash}}"

patches:
  - target:
      kind: Deployment
      name: unomi
    patch: |-
      - op: replace
        path: /spec/template/spec/containers/0/env/3
        value:
          name: UNOMI_ELASTICSEARCH_INDEXPREFIX
          value: context-{{domain_hash}}